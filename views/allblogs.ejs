<%- include("./partials/header") %>
<%- include("./partials/nav") %>
<div class="posts w-full min-h-screen bg-zinc-300  p-5 flex flex-col gap-10 flex-wrap justify-center items-center">
    <% allPosts.forEach((post,i)=>{%>
    <div
      class="posts w-2/3 h-52  bg-white rounded-lg py-3 flex  justify-between p-5"
    >
      <section class=" w-1/3 h-full  rounded mr-4">
        <img src="<%=post.image%>" alt="" class="object-cover w-full  h-48 rounded-lg" />
      </section>
      <section class="flex w-2/3 flex-col justify-between overflow-hidden">
        <p class="overflow-auto"><%=post.description%>.....</p>
        <a href="/exploreBlog/<%=post._id%>"><button class="px-4 py-1 bg-blue-100 rounded-lg">explore more </button></a>
      </section>
      </div>

    <%})%>
  </div>
</div>
<%- include("./partials/footer") %>